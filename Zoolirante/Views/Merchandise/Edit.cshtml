@model Zoolirante.Models.Merchandise

@{
    ViewData["Title"] = "Edit";
}

<div class="w-100 bg-dark py-5 text-white text-center" style="margin-top: -2px">
    <h1 class="title-fade">Edit @Model.ItemName Page</h1>
</div>

<div class="container mt-4">
    <div class="row g-1">
        <div class="col-md-5">
            <div class="card h-100 rounded-0">
                <div class="card-body">
                    <h1 class="card-title h3 mb-2 text-dark">Edit</h1>
                    <form asp-controller="Merchandise" asp-action="Edit" asp-route-id="@Model.ItemId" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ItemId" />
                        <br>

                        <div class="form-group mb-3">
                            <span>Item Name:</span>
                            <input asp-for="ItemName" class="form-control" />
                            <span asp-validation-for="ItemName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <span>Item Decription:</span>
                            <input asp-for="ItemDescription" class="form-control" />
                            <span asp-validation-for="ItemDescription" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <span>Pricing:</span>
                            <input asp-for="ItemCost" class="form-control" />
                            <span asp-validation-for="ItemCost" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <span>Item Image: </span>
                            <input asp-for="ItemImage" class="form-control" />
                            <span asp-validation-for="ItemImage" class="text-danger"></span>
                        </div>

                        <br>

                        <div class="form-group d-flex gap-2">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-2 d-flex justify-content-center">
            <button type="button" class="btn btn-dark rounded-circle d-flex align-items-center justify-content-center"
                    style="width: 50px; height: 50px; margin-top: 250px;" disabled>
                <i class="bi bi-arrow-right"></i>
            </button>
        </div>


        <div class="col-md-5">
            <div class="card card shadow-sm h-100">
                <div class="card-body">
                    <h1 class="h3 mb-2 text-dark">@Model.ItemName</h1>
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <span class="fs-4 fw-semibold text-success">
                            @Model.ItemCost.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-AU"))
                        </span>
                    </div>

                    <p class="text-muted mb-3">@Model.ItemDescription</p>
                </div>
                <img src="@Model.ItemImage" class="card-img-bottom img-fluid rounded-bottom mb-3" style="max-height: 300px; object-fit: contain;" />
        </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
