@model Zoolirante.ViewModels.DefaultViewModel

@{
    ViewData["Title"] = "Home Page";
}

<body class="bg-dark"></body>

@*Banner*@
<div id="hpSlides" class="carousel slide" data-bs-ride="carousel" data-bs-interval="4500">
    <div class="carousel-inner">

        <div class="carousel-item active">
            <video autoplay muted loop playsinline style="width: 100vw; height: 65vh; object-fit: cover;">
                <source src="/Images/hpVids/home.mp4" type="video/mp4">
            </video>
            <div class="carousel-caption d-none d-md-block z-5">
                <h1 class="fw-bold">Welcome to Zoolirante!</h1>
                <p class="fs-4">Discover animals, events, and more!</p>
            </div>
        </div>
            <div class="carousel-item">
            <a asp-area="" asp-controller="AnimalList" asp-action="Index">
                <video autoplay muted loop playsinline style="width: 100vw; height: 65vh; object-fit: cover;">
                    <source src="/Images/hpVids/animals.mp4" type="video/mp4">
                </video>
                <div class="carousel-caption d-none d-md-block z-5">
                    <h1 class="fw-bold">Animal Showcase</h1>
                    <p class="fs-4"> Roar into adventure!! explore learn and play!</p>
                </div>
            </a>
        </div>

        <div class="carousel-item">
            <a asp-area="" asp-controller="Events" asp-action="Index">
                <video autoplay muted loop playsinline style="width: 100vw; height: 65vh; object-fit: cover;">
                    <source src="/Images/hpVids/events.mp4" type="video/mp4">
                </video>
                <div class="carousel-caption d-none d-md-block z-5">
                    <h1 class="fw-bold">Events</h1>
                    <p class="fs-4"> Watch our tigers roar at Feeding Time!</p>
                </div>
            </a>
        </div>

        <div class="carousel-item">
            <a asp-area="" asp-controller="Events" asp-action="Index">
            <video autoplay muted loop playsinline style="width: 100vw; height: 65vh; object-fit: cover;">
                <source src="/Images/hpVids/merch.mp4" type="video/mp4">
            </video>
            <div class="carousel-caption d-none d-md-block z-5">
                <h1 class="fw-bold">Shop</h1>
                <p class="fs-4">Come pick up a memory and never forget your time </p>
            </div>
            </a>

        </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#hpSlides" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#hpSlides" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

@*Cards*@
<div class="container-fluid px-0">
    <div class="row g-0">

        <div class="col-sm-4">
            <div class="card card-tickets h-100 radius-bottom-2">
                <div class="img-dark-sides">
                    <img src="/Images/zoo-ticket.png" alt="Tickets" class="card-img-top" style="height: 450px;">
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold">Be a part of something amazing</h5>
                    <p class="card-text">Get your tickets now!</p>
                    <div class="row">
                        <div class="col-4">
                            <a class="btn btn-primary custom-btn-ticket mt-auto" href="">Buy Now</a>
                        </div>
                        <div class="col-8"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="card card-merchandise h-100 radius-bottom-2">
                <div class="img-dark-sides">
                    <img src="https://azwp-az-prod-1-ap-southeast-2.s3.amazonaws.com/uploads/2024/03/9249-Where-to-Shop-Web-Assets_updated_TH-elephantasia.jpg"
                         alt="Merchandise" class="card-img-top" style="height: 450px; object-fit: cover;">
                </div>
                <div class="card-body d-flex flex-column" style="color: black;">
                    <h5 class="card-title fw-bold">Gear up in style</h5>
                    <p class="card-text">Get your hands on our limited-edition merchandise before it’s gone</p>
                    <div class="row">
                        <div class="col-4">
                            <a class="btn btn-primary custom-btn mt-auto" href="/Merchandise/Index">Shop Merch</a>
                        </div>
                        <div class="col-8"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="card card-events h-100 radius-bottom-2">
                <div class="img-dark-sides">
                    <img src="https://www.mandai.com/content/dam/mandai/singapore-zoo/things-to-do/zebra-feeding-900x600.jpg"
                         alt="Events" class="card-img-top" style="height: 450px; object-fit: cover;">
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold">Events</h5>
                    <p class="card-text">Discover our interesting events and encounters with animals</p>
                    <div class="row">
                        <div class="col-4">
                            <a class="btn btn-primary custom-btn-event mt-auto" href="">Learn more</a>
                        </div>
                        <div class="col-8"></div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<section class="animal-page-section" style="margin-top: 40px">
    <div class="description-half">

        <img class="zoosection-image" src="../Images/zoo-banner.png" />

        <p style="margin-top: -20px">
            Zoolirante will be home to a spectacular range of animals from across the globe, including awe-inspiring and endangered species. Stroll through the African Savannah to witness <strong>lions, giraffes, and cheetahs,</strong> wander the lively Primate Boulevard with <strong>gorillas and chimpanzees, </strong>and be captivated by the wildlife of South-East Asia, from <strong>tigers to elephants.</strong> Get closer than ever to Australia’s favourites in our open-range habitat, where kangaroos and wallabies hop freely along the pathways.

        </p>

        <p>
            Proudly Italian-owned and crafted with passion, Zoolirante blends global wildlife with <strong>European flair</strong> to create an unforgettable zoo experience.
        </p>
        <p>
            Come discover why Zoolirante is set to become Australia’s favourite new zoo!
        </p>

        <a class="btn btn-primary radius-2 animalpage-btn"> Tickets &  Memberships</a>

    </div>


    <div class="animal-showcase-half">

        <div class="container-fluid custom-card-section">

            <div class="row">

                <div class="col-sm-5">

                    <div class="card radius-2 lion-card" onclick="window.location.href='/AnimalList/Details/1'" style="cursor: pointer;">

                        <div class="card-body">

                            <div class="card-title custom-title"> Our Animal</div>
                                <div class="card-title custom-header"> Lions</div>
                                <div class="card-text custom-bodytext">
                                “Step into the heart of Zoolirante and feel the ground tremble as our mighty lions roam — rulers of the wild waiting to meet you.”
                                </div>
                        </div>
                        <img class="lioncard-img" src="https://www.freeiconspng.com/thumbs/lion-png/amazing-lion-png-clipart-6.png" />

                    </div>
                   
                </div>

                <div class="col-sm-5">

                    <div class="card radius-2 giraffe-card" onclick="window.location.href='/AnimalList/Details/3'" style="cursor: pointer;">

                        <div class="card-body">
                            <div class="card-title custom-title"> Our Animal</div>
                            <div class="card-title custom-header"> Giraffe</div>
                                <div class="card-text custom-bodytext">
                                “Wander through the treetops with Zoolirante’s graceful giraffes, where every gentle glance and towering stride tells a story of the savannah.”
                                </div>
                            
                        </div> 
                        <img class="giraffecard-img" src="https://www.pikpng.com/pngl/b/97-970776_stock-png-giraffe-head-by-earthymoon-pluspng-giraffe.png" />

                    </div>
                </div>

            </div>
        </div>

        <div> <a class="btn btn-primary radius-2 discovermore-btn" href="/AnimalList/Index">Discover More</a></div>
     
    </div>
 
</section>

