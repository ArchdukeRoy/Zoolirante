@model Zoolirante.Models.Event
@{
    ViewData["Title"] = "Create Event";
}

<div class="w-100 bg-dark py-5 text-white text-center" style="margin-top: -2px">
    <h1>Create Events</h1>
</div>

<div class="container py-4">
    <form asp-action="Create" method="post" class="card shadow-sm border-0 p-4">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Event Section -->
        <h4 class="mb-3">Event Details</h4>
        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="e.g., Feeding Time" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" placeholder="Short description..." />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Roll Call Section -->
        <h4 class="mt-4 mb-3">Initial Roll Call (optional)</h4>
        <div class="form-group mb-3">
            <label for="rollDate" class="form-label">Date</label>
            <input id="rollDate" name="rollDate" type="date" class="form-control" />
            <div class="form-text">Leave empty for Everyday.</div>
        </div>

        <div class="form-group mb-3">
            <label for="rollTime" class="form-label">Time <span class="text-danger">*</span></label>
            <input id="rollTime" name="rollTime" type="time" class="form-control" step="60" required />
        </div>

        <div class="form-group mb-4">
            <label for="zookeeperId" class="form-label">Zookeeper Id</label>
            <input id="zookeeperId" name="zookeeperId" type="number" class="form-control" placeholder="e.g., 12" />
            <div class="form-text">Optional — can assign later.</div>
        </div>

        <!-- Actions -->
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary px-4">Create</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
