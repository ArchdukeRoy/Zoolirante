@model Zoolirante.Models.Species

@{
    ViewData["Title"] = "Edit";
}


<div class="w-100 bg-dark py-5 text-white text-center" style="margin-top:-2px;">
    <h1 class="title-fade">Edit @Model.Name</h1>
</div>

<div class="container mt-4">
    <div class="row g-1 align-items-stretch">
        <div class="col-md-5">
            <div class="card h-100 rounded-0 shadow-sm">
                <div class="card-body">
                    <h1 class="card-title h3 mb-2 text-dark">Edit</h1>

                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="SpeciesId" />

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label mb-0">Name:</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SpeciesDescription" class="form-label mb-0">Description:</label>
                            <textarea asp-for="SpeciesDescription" rows="4" class="form-control"></textarea>
                            <span asp-validation-for="SpeciesDescription" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Habitat" class="form-label mb-0">Habitat:</label>
                            <select asp-for="Habitat" class="form-select">
                                <option>Land</option>
                                <option>Sky</option>
                                <option>Water</option>
                            </select>
                            <span asp-validation-for="Habitat" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Diet" class="form-label mb-0">Diet:</label>
                            <select asp-for="Diet" class="form-select">
                                <option value="">-- select --</option>
                                <option>Carnivore</option>
                                <option>Omnivore</option>
                                <option>Herbivore</option>
                            </select>
                            <span asp-validation-for="Diet" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SpeciesImage" class="form-label mb-0">Main Image (bottom banner):</label>
                            <input asp-for="SpeciesImage" class="form-control" />
                            <span asp-validation-for="SpeciesImage" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SpeciesImage2" class="form-label mb-0">Secondary Image (in preview body):</label>
                            <input asp-for="SpeciesImage2" class="form-control" />
                            <span asp-validation-for="SpeciesImage2" class="text-danger"></span>
                        </div>

                        <div class="form-group d-flex gap-2">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-2 d-flex justify-content-center">
            <button type="button"
                    class="btn btn-light rounded-circle d-flex align-items-center justify-content-center border"
                    style="width: 50px; height: 50px; margin-top: 400px;"
                    disabled>
                <i class="bi bi-arrow-right text-dark"></i>
            </button>
        </div>

        <div class="col-md-5">
            <div class="card h-100 rounded-0 shadow-sm d-flex flex-column" style="border:1px solid #dee2e6;">
                <div class="card-body">
                    <h1 class="h3 mb-2 text-dark">@Model.Name</h1>

                    <div class="text-center mb-3">
                        <img src="@Model.SpeciesImage" class="card-img-bottom img-fluid rounded-bottom mb-3" style="max-height:300px; object-fit:contain;" />
                    </div>

                    <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
                        <span class="badge bg-secondary">@Model.Habitat</span>
                        <span class="badge bg-secondary">@Model.Diet</span>
                    </div>

                    <p class="text-muted mb-0">@Model.SpeciesDescription</p>
                </div>

                <img src="@Model.SpeciesImage2" class="card-img-bottom img-fluid rounded-bottom mb-3" style="max-height:300px; object-fit:contain;" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
