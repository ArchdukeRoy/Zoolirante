@model Zoolirante.Models.Visitor

@{
    ViewData["Title"] = "Create";
}
<!-- Create Visitor Form Container -->
<div class="container my-4">
    <div class="row justify-content-end">
        <div class="col-12 col-md-6 col-lg-4 ms-auto">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    <h5 class="card-title mb-3">Sign Up!</h5>

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- VISITOR ID NEEDS TO BE AUTO GENERATED
                        <div class="form-group mb-3">
                            <label asp-for="VisitorId" class="form-label"></label>
                            <select asp-for="VisitorId" class="form-select" asp-items="ViewBag.VisitorId"></select>
                        </div>
                        -->

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label"></label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="PasswordHash" class="form-label">Password</label>
                            <input asp-for="PasswordHash" type="password" class="form-control" />
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                Sign up now!
                            </button>
                        </div>

                        <!-- Shouldn't need this but the code might be helpful
                        <div class="mb-3">
                            <label asp-for="Contact" class="form-label"></label>
                            <input asp-for="Contact" class="form-control" />
                            <span asp-validation-for="Contact" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PaymentMethod" class="form-label"></label>
                            <input asp-for="PaymentMethod" class="form-control" />
                            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                        -->
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
