@model Zoolirante.ViewModels.DefaultViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="w-100 bg-dark py-5 text-white text-center" style="margin-top: -2px">
    <h1>Entry Tickets</h1>
</div>
<div class="w-100 bg-zoolirante-light py-1 shadow"></div>

<div class="container">
    <h1 class="main-title">Tickets & Membership</h1>

    <!-- Date Selection Section -->
    <div class="section date-section">
        <h2 class="section-title">Select your visit date</h2>
        <div class="calendar-container">
            <div class="calendar-header">
                <button class="nav-btn prev-btn">‹</button>
                <span class="current-month">October 2024</span>
                <button class="nav-btn next-btn">›</button>
            </div>
            <div class="calendar-grid">
                <div class="day-header">M</div>
                <div class="day-header">T</div>
                <div class="day-header">W</div>
                <div class="day-header">T</div>
                <div class="day-header">F</div>
                <div class="day-header">S</div>
                <div class="day-header">S</div>

                <!-- Calendar days will be generated by JavaScript -->
            </div>
        </div>
    </div>

    <!-- Time Selection Section -->
    <div class="section time-section">
        <h2 class="section-title">Select your arrival time</h2>
        <div class="time-slots">
            <button class="time-slot" data-time="9am">9am</button>
            <button class="time-slot" data-time="10am">10am</button>
            <button class="time-slot" data-time="11am">11am</button>
            <button class="time-slot" data-time="12pm">12pm</button>
            <button class="time-slot" data-time="after1pm">After 1pm</button>
        </div>
    </div>

    <!-- Guest Selection Section -->
    <div class="section guest-section">
        <h2 class="section-title">Select the number of guests to view pricing:</h2>
        <div class="guest-rows">
            <div class="guest-row">
                <div class="guest-info">
                    <h4 class="guest-type">Adult</h4>
                    <p class="guest-age">(16+ years)</p>
                </div>
                <div class="guest-counter">
                    <button class="counter-btn minus-btn" data-type="adult">-</button>
                    <span class="count-display" id="adult-count">0</span>
                    <button class="counter-btn plus-btn" data-type="adult">+</button>
                </div>
            </div>

            <div class="guest-row">
                <div class="guest-info">
                    <h4 class="guest-type">Child</h4>
                    <p class="guest-age">(3-15 years)</p>
                </div>
                <div class="guest-counter">
                    <button class="counter-btn minus-btn" data-type="child">-</button>
                    <span class="count-display" id="child-count">0</span>
                    <button class="counter-btn plus-btn" data-type="child">+</button>
                </div>
            </div>

            <div class="guest-row">
                <div class="guest-info">
                    <h4 class="guest-type">Infant</h4>
                    <p class="guest-age">(0-2 years)</p>
                </div>
                <div class="guest-counter">
                    <span class="count-display">FREE</span>
                </div>
            </div>

            <div class="guest-row">
                <div class="guest-info">
                    <h4 class="guest-type">Concession</h4>
                    <p class="guest-age"></p>
                </div>
                <div class="guest-counter">
                    <button class="counter-btn minus-btn" data-type="concession">-</button>
                    <span class="count-display" id="concession-count">0</span>
                    <button class="counter-btn plus-btn" data-type="concession">+</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Ticket Cards Section -->
    <div class="section tickets-section">
        <div class="ticket-cards">

            <!-- Day Ticket Card -->
            <div class="ticket-card" data-ticket="day">
                <div class="ticket-header">
                    <h3 class="ticket-title">Day Ticket</h3>
                    <p class="ticket-subtitle">All day family fun</p>
                </div>
                <div class="ticket-price">
                    <span class="price-amount" id="day-price">$-</span>
                </div>
                <div class="price-note">
                    <span class="note-text" id="day-note">Select the number of guests above to compare pricing</span>
                </div>
                <ul class="ticket-features">
                    <li class="feature-item">
                        <span class="feature-icon">🎟️</span>
                        <span class="feature-text">1 day zoo entry</span>
                    </li>
                    <li class="feature-item">
                        <span class="feature-icon">🚗</span>
                        <span class="feature-text">FREE Parking</span>
                    </li>
                </ul>
                <button class="buy-btn" data-ticket="day">Buy now</button>
            </div>

            <!-- Unlimited Pass Card -->
            <div class="ticket-card best-value" data-ticket="unlimited">
                <div class="badge">Best value</div>
                <div class="ticket-header">
                    <h3 class="ticket-title">Unlimited Pass</h3>
                </div>
                <div class="ticket-price">
                    <span class="price-amount" id="unlimited-price">$-</span>
                </div>
                <div class="price-note">
                    <span class="note-text" id="unlimited-note">Select the number of guests above to compare pricing</span>
                </div>
                <ul class="ticket-features">
                    <li class="feature-item">
                        <span class="feature-icon">♾️</span>
                        <span class="feature-text">12 months zoo entry – UNLIMITED access to Zoolirante</span>
                    </li>
                    <li class="feature-item">
                        <span class="feature-icon">🚗</span>
                        <span class="feature-text">FREE parking</span>
                    </li>
                    <li class="feature-item">
                        <span class="feature-icon">💰</span>
                        <span class="feature-text">No joining fee</span>
                    </li>
                </ul>
                <button class="buy-btn" data-ticket="unlimited">Buy now</button>
            </div>

        </div>
    </div>

    <!-- Price Table Section -->
    <div class="section price-table-section">
        <div class="price-table">
            <table class="pricing-table">
                <thead>
                    <tr class="table-header">
                        <th class="table-cell header-cell">Price List</th>
                        <th class="table-cell header-cell">Day Ticket</th>
                        <th class="table-cell header-cell">Unlimited Pass</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="table-row">
                        <td class="table-cell category-cell"><strong>ADULT (16+)</strong></td>
                        <td class="table-cell price-cell">
                            <div class="price-primary">From $39.99</div>
                        </td>
                        <td class="table-cell price-cell">
                            <div class="price-primary">From $59.98</div>
                        </td>
                    
                    </tr>
                    <tr class="table-row">
                        <td class="table-cell category-cell"><strong>CHILD (3-15)</strong></td>
                        <td class="table-cell price-cell">
                            <div class="price-primary">From $19.99</div>
                        </td>
                        <td class="table-cell price-cell">
                            <div class="price-primary">From $28.98</div>
                        </td>
              
                    </tr>
                    <tr class="table-row">
                        <td class="table-cell category-cell"><strong>CONCESSION</strong></td>
                        <td class="table-cell price-cell">
                            <div class="price-primary">$29.99</div>
                        </td>
                        <td class="table-cell price-cell">
                            <div class="price-primary">$36.98</div>                        </td>
               
                    </tr>
                    <tr class="table-row">
                        <td class="table-cell category-cell"><strong>INFANT (0-2)</strong></td>
                        <td class="table-cell price-cell"><div class="price-primary">FREE</div></td>
                        <td class="table-cell price-cell"><div class="price-primary">FREE</div></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Cart Section -->
    <div class="cart-container">
        <button class="cart-btn" id="cart-btn">
            <span class="cart-icon">🛒</span>
            <span class="cart-count" id="cart-count">0</span>
        </button>
    </div>

    <!-- Notification -->
    <div class="notification" id="notification">
        <span class="notification-text"></span>
    </div>

    <!-- Footer Note -->
    <div class="footer-note">
        <p>Price calculator displays online price, are subject to change and may vary during peak periods or special events.</p>
    </div>
</div>

<script src="~/js/ticket.js">
</script>

@if (!string.IsNullOrEmpty(Model.username)) {
    <div class="alert alert-info mx-5 mt-3 py-2">
        Do stuff here
    </div>
} else {
    <div class="alert alert-danger mx-5 mt-3 py-2">
        Please log in to purchase tickets.
    </div>
}