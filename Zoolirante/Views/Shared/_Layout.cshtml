<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Zoolirante</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Zoolirante.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="mt-5">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-zoolirante box-shadow fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/Images/logo.png" alt="Zoolirante">
                 </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                       ria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item me-4">
                            <a class="nav-link"  asp-area="" asp-controller="Home" asp-action="Index">Home</a>

                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link"  asp-area="" asp-controller="AnimalList" asp-action="Index">Animals</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link"  asp-area="" asp-controller="" asp-action="">Events</a>
                          
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link" asp-area="" asp-controller="Merchandise" asp-action="Index">Merch</a>
                        </li>

                        <li class="nav-item me-4">
                            <a class="btn text-dark bg-zoolirante-secondary radius-2 mx-2 fw-bold" asp-area="" asp-controller="Merchandise" asp-action="Index">Become Member</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="btn text-dark bg-zoolirante-secondary radius-2 fw-bold" asp-area="" asp-controller="Merchandise" asp-action="Index">Login</a>
                        </li>
                        <li class="nav-item me-4 dropdown-hover">
                            <a class="btn text-dark bg-zoolirante-secondary radius-2 fw-bold dropdown-toggle" href="#">Book Now</a>
                            <div class="dropdown-menu-custom">
                                <a class="dropdown-item-custom" asp-area="" asp-controller="" asp-action="">Buy Tickets</a>
                                <a class="dropdown-item-custom" asp-area="" asp-controller="" asp-action="">My Account</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid px-0">
        <main role="main" class="pb-3 pt-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Zoolirante - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
